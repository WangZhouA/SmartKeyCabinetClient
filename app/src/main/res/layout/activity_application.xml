<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.saiyi.smartkeycabinetclient.user.ui.ApplicationActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/shape_application_choose_bg"
        android:orientation="horizontal">

        <com.lib.fast.common.widgets.CheckTextView
            android:id="@+id/pending_ct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_pending_bg"
            android:textColor="@drawable/selector_my_application_text_color"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15dp"
            android:text="待审批"/>

        <com.lib.fast.common.widgets.CheckTextView
            android:id="@+id/approved_ct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_approved_bg"
            android:textColor="@drawable/selector_my_application_text_color"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15dp"
            android:text="已审批"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
