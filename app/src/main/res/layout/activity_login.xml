<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.saiyi.smartkeycabinetclient.account.ui.LoginActivity">

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:background="@drawable/shape_login_logo"
        android:text="logo"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <com.lib.fast.common.widgets.CheckImageView
            android:id="@+id/uname_ck"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/login01"/>

        <EditText
            android:id="@+id/uname_et"
            android:layout_toRightOf="@+id/uname_ck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="phone"
            android:textSize="@dimen/text_middle"
            android:hint="输入手机号"
            android:textColorHint="@color/hint_text_color"
            android:textColor="@color/normal_text_color"
            android:background="@null"
            android:layout_alignParentRight="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/text_size_17dp">

        <com.lib.fast.common.widgets.CheckImageView
            android:id="@+id/upwd_ck"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/login02"/>

        <EditText
            android:id="@+id/upwd_et"
            android:layout_toRightOf="@+id/upwd_ck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:textSize="@dimen/text_middle"
            android:hint="密码"
            android:textColorHint="@color/hint_text_color"
            android:textColor="@color/normal_text_color"
            android:background="@null"
            android:layout_alignParentRight="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="13dp">

        <CheckBox
            android:id="@+id/remember_pwd_ck"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:checked="true"
            android:background="@drawable/selector_remember_pwd"
            android:button="@null"/>

        <TextView
            android:id="@+id/remember_pwd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/remember_pwd_ck"
            android:textSize="13dp"
            android:textColor="@color/normal_text_color"
            android:text="记住密码"/>

        <TextView
            android:id="@+id/error_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/remember_pwd_tv"
            android:ellipsize="start"
            android:textSize="13dp"
            android:textColor="@color/colorAccent"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="26dp"
        android:clickable="true"
        android:gravity="center"
        android:background="@drawable/shape_login_btn"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:text="登陆"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/forget_pwd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textColor="@color/normal_text_color"
            android:textSize="14dp"
            android:text="忘记密码"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/line"/>

        <TextView
            android:id="@+id/regist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textColor="@color/normal_text_color"
            android:textSize="14dp"
            android:text="立即注册"/>
    </LinearLayout>
</LinearLayout>
