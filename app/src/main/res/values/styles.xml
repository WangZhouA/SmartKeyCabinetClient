<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <item name="android:screenOrientation">portrait</item>
    </style>

    <!--全屏显示theme-->
    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--视频全屏播放-->
    <style name="VideoFullScreenTheme" parent="BaseTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--欢迎页的主题-->
    <style name="SpalishTheme" parent="FullScreenTheme">
        <item name="android:windowBackground">@drawable/spalish_bg</item>
    </style>

    <!--new task activity theme
    参考:https://stackoverflow.com/questions/31264157/how-to-avoid-black-screen-when-intent-flag-activity-new-task-intent-flag-activ-->
    <style name="NewTaskTheme" parent="AppTheme">
        <item name="android:animationDuration">0</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!--new task full screen-->
    <style name="NewTaskFullScreenTheme" parent="NewTaskTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--new task full screen-->
    <style name="NewTaskVideoFullScreenTheme" parent="NewTaskTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    //For GifView Declaration
    <style name="Widget.GifView" parent="@android:style/Widget"/>


    <!-- 首页底部导航条 -->
    <style name="tabStyle">
        <item name="android:padding">5dp</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/tab_text_color</item>
    </style>

</resources>
